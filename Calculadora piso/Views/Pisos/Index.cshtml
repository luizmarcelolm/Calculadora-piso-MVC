@{
    ViewData["Title"] = "Listagem dos cálculos";
}

<div class="text-center">
    <h1 class="display-4">Listagem das áreas calculadas</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-outline-success" asp-controller="Pisos" asp-action="Criar">Adicionar novo</a>
    </div>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Local</th>
                <th scope="col">Medida da área</th>
                <th scope="col">Medida do piso</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>sala</td>
                <td>80mts²</td>
                <td>60x60</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a role="button" class="btn btn-outline-primary">Editar</a>
                        <a role="button" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>

            <tr>
                <th scope="row">2</th>
                <td>Quarto</td>
                <td>50mts²</td>
                <td>20x20</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a role="button" class="btn btn-outline-primary">Editar</a>
                        <a role="button" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>

            <tr>
                <th scope="row">3</th>
                <td>Cozinha</td>
                <td>20mts²</td>
                <td>10x10</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic outlined example">
                        <a role="button" class="btn btn-outline-primary">Editar</a>
                        <a role="button" class="btn btn-outline-danger">Excluir</a>
                    </div>
                </td>
            </tr>

        </tbody>
    </table>

</div>
   