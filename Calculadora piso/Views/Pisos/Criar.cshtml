@{
    ViewData["Title"] = "Calcular área ";
}

<div class="text-center">
    <h1 class="display-4">Criar cálculo da área</h1>
</div><br />

<div>
    <div class="text-center">
        <span class="text-center">Local da instalação</span><br />
        <input type="text" class="tform-group col-md-2 text-center" id="local" placeholder="Local">
    </div><br />

    <div class="text-center">
        <span class="text-center">Medidas da área em metros</span><br />
        <input type="number" class="form-group col-md-1 text-center" id="medida1" placeholder="Ex. 30">
        <input type="number" class="form-group col-md-1 text-center" id="medida2" placeholder="Ex. 20">
    </div><br />

    <div class="text-center">
        <span class="text-center">Medidas do piso em metros</span><br />
        <input type="number" class="form-group col-md-1 text-center" id="medidaPiso1" placeholder="Ex. 0.50">
        <input type="number" class="form-group col-md-1 text-center" id="medidaPiso2" placeholder="Ex. 0.50">
    </div><br />

    <div class="text-center">
        <span class="text-center">Deseja incluir mais 10% do rodapé?</span>
    

        <div class="text-center">
            <input class="text-center" type="radio" name="exampleRadios" id="exampleRadios1" value="opcao1">
            <label class="text-center" for="exampleRadios1">
                Sim
            </label>
        </div>

        <div class="text-center">
            <input class="text-center" type="radio" name="exampleRadios" id="exampleRadios1" value="opcao1">
            <label class="text-center" for="exampleRadios1">
                Não
            </label>
        </div><br />
    </div>

    <div class="text-center" role="group" aria-label="Basic outlined example">
        <a role="button" class="btn btn-outline-success">Adicionar</a><br /><br />
        <a role="button" class="btn btn-outline-primary" asp-controller="Pisos" asp-action="Index">Voltar</a>
    </div>
   
</div>

     
